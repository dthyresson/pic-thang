datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Album {
  id   String @id @unique @default(uuid())
  name String @unique
  pics Pic[]
}

model Pic {
  id        String @id @unique @default(uuid())
  album     Album  @relation(fields: [albumId], references: [id])
  albumId   String
  original  String
  processed String
}
